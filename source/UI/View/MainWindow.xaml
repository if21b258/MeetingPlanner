<Window x:Class="TourPlannerUI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlannerUI.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="400" MinWidth="600"
        DataContext="{Binding MainViewModel, Source={StaticResource IoCConfig2}}"
        >
    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="7.5*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <local:MenuView x:Name="Menu" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"/>

        <local:SearchBarView x:Name="SearchBar" Grid.Column="0" Grid.Row="1"/>

        <local:TourListView x:Name="TourList" Grid.Column="0" Grid.Row="2"/>
        
        <TabControl Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2" Background="#FFF5DFDF">
            <TabItem>
                <TabItem.Header>
                    <Grid Height="26">
                        <TextBlock Text="General" VerticalAlignment="Center"/>
                    </Grid>
                </TabItem.Header>
                <local:TourInfoView x:Name="TourInfo"/>
            </TabItem>
            <TabItem Header="Route">
                <local:TourRouteView x:Name="TourRoute"/>
            </TabItem>
            <TabItem Header="Logs">
                <local:TourLogView x:Name="TourLog"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
